@* Componente de tabela para listagem de autores *@
<div class="table-responsive">
    <table class="table table-striped table-hover mb-0">
        <thead class="table-primary">
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th class="text-center" style="width: 120px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var autor in Autores)
            {
                <tr>
                    <td>@autor.CodAu</td>
                    <td>@autor.Nome</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary" title="Editar" @onclick="() => OnEdit.InvokeAsync(autor)">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-outline-danger" title="Excluir" @onclick="() => OnDelete.InvokeAsync(autor)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public IEnumerable<AutorDto> Autores { get; set; } = Enumerable.Empty<AutorDto>();

    [Parameter]
    public EventCallback<AutorDto> OnEdit { get; set; }

    [Parameter]
    public EventCallback<AutorDto> OnDelete { get; set; }
}
