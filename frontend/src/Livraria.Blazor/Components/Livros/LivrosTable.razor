@* Componente de tabela para listagem de livros *@
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Código</th>
                <th>Título</th>
                <th>Editora</th>
                <th>Edição</th>
                <th>Ano</th>
                <th>Autores</th>
                <th>Assuntos</th>
                <th class="text-center" style="width: 150px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var livro in Livros)
            {
                <tr>
                    <td>@livro.CodL</td>
                    <td>@livro.Titulo</td>
                    <td>@livro.Editora</td>
                    <td>@livro.Edicao</td>
                    <td>@livro.AnoPublicacao</td>
                    <td>@string.Join(", ", livro.Autores)</td>
                    <td>@string.Join(", ", livro.Assuntos)</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-info" title="Visualizar" @onclick="() => OnView.InvokeAsync(livro)">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button type="button" class="btn btn-outline-primary" title="Editar" @onclick="() => OnEdit.InvokeAsync(livro)">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-outline-danger" title="Excluir" @onclick="() => OnDelete.InvokeAsync(livro)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public IEnumerable<LivroListDto> Livros { get; set; } = Enumerable.Empty<LivroListDto>();

    [Parameter]
    public EventCallback<LivroListDto> OnView { get; set; }

    [Parameter]
    public EventCallback<LivroListDto> OnEdit { get; set; }

    [Parameter]
    public EventCallback<LivroListDto> OnDelete { get; set; }
}
