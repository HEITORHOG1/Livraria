@page "/autores"
@inject IAutorService AutorService
@inject NavigationManager Navigation

<PageTitle>Autores - Livraria</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">
        <i class="bi bi-person me-2"></i>
        Autores
    </h3>
    <a href="/autores/create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>
        Novo Autor
    </a>
</div>

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <ErrorAlert Message="@_errorMessage" OnDismiss="() => _errorMessage = null" />
}

@if (_isLoading)
{
    <LoadingSpinner />
}
else if (_autores.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <AutoresTable Autores="_autores" 
                          OnEdit="HandleEdit" 
                          OnDelete="HandleDelete" />
        </div>
    </div>
}
else
{
    <EmptyState Message="Nenhum autor cadastrado" />
}

<ConfirmDialog IsVisible="_showDeleteDialog"
               Title="Excluir Autor"
               Message="@($"Deseja excluir o autor '{_autorToDelete?.Nome}'? Esta ação não pode ser desfeita.")"
               ConfirmText="Excluir"
               OnConfirm="ConfirmDelete"
               OnCancel="CancelDelete" />

@code {
    private IEnumerable<AutorDto> _autores = Enumerable.Empty<AutorDto>();
    private bool _isLoading = true;
    private bool _showDeleteDialog;
    private AutorDto? _autorToDelete;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadAutoresAsync();
    }

    private async Task LoadAutoresAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        
        try
        {
            _autores = await AutorService.GetAllAsync();
        }
        catch (HttpRequestException)
        {
            _errorMessage = "Erro de conexão com o servidor. Tente novamente.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void HandleEdit(AutorDto autor)
    {
        Navigation.NavigateTo($"/autores/edit/{autor.CodAu}");
    }

    private void HandleDelete(AutorDto autor)
    {
        _autorToDelete = autor;
        _showDeleteDialog = true;
    }

    private async Task ConfirmDelete()
    {
        if (_autorToDelete is null) return;

        var response = await AutorService.DeleteAsync(_autorToDelete.CodAu);
        
        if (response.IsSuccess)
        {
            await LoadAutoresAsync();
        }
        else
        {
            _errorMessage = response.ErrorMessage;
        }

        _showDeleteDialog = false;
        _autorToDelete = null;
    }

    private void CancelDelete()
    {
        _showDeleteDialog = false;
        _autorToDelete = null;
    }
}
