@page "/autores/create"
@using Livraria.Blazor.Components.Autores
@using static Livraria.Blazor.Components.Autores.AutorForm
@inject IAutorService AutorService
@inject NavigationManager Navigation

<PageTitle>Novo Autor - Livraria</PageTitle>

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/autores">Autores</a></li>
        <li class="breadcrumb-item active" aria-current="page">Novo Autor</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">
        <i class="bi bi-plus-circle me-2"></i>
        Novo Autor
    </h3>
</div>

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <ErrorAlert Message="@_errorMessage" OnDismiss="() => _errorMessage = null" />
}

<div class="card">
    <div class="card-body">
        <AutorForm Model="_model" 
                   OnSubmit="HandleSubmit" 
                   IsSubmitting="_isSubmitting" 
                   SubmitText="Criar Autor" />
    </div>
</div>

@code {
    private AutorFormModel _model = new();
    private bool _isSubmitting;
    private string? _errorMessage;

    private async Task HandleSubmit()
    {
        _isSubmitting = true;
        _errorMessage = null;

        try
        {
            var request = new CreateAutorRequest(_model.Nome);
            var response = await AutorService.CreateAsync(request);

            if (response.IsSuccess)
            {
                Navigation.NavigateTo("/autores");
            }
            else
            {
                _errorMessage = response.ErrorMessage;
            }
        }
        catch (HttpRequestException)
        {
            _errorMessage = "Erro de conex√£o com o servidor. Tente novamente.";
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
