@page "/livros"
@inject ILivroService LivroService
@inject NavigationManager Navigation

<PageTitle>Livros - Livraria</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">
        <i class="bi bi-book me-2"></i>
        Livros
    </h3>
    <a href="/livros/create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>
        Novo Livro
    </a>
</div>

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <ErrorAlert Message="@_errorMessage" OnDismiss="() => _errorMessage = null" />
}

@if (_isLoading)
{
    <LoadingSpinner />
}
else if (_livros.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <LivrosTable Livros="_livros" 
                         OnView="HandleView" 
                         OnEdit="HandleEdit" 
                         OnDelete="HandleDelete" />
        </div>
    </div>
}
else
{
    <EmptyState Message="Nenhum livro cadastrado" />
}

<ConfirmDialog IsVisible="_showDeleteDialog"
               Title="Excluir Livro"
               Message="@($"Deseja excluir o livro '{_livroToDelete?.Titulo}'? Esta ação não pode ser desfeita.")"
               ConfirmText="Excluir"
               OnConfirm="ConfirmDelete"
               OnCancel="CancelDelete" />

@code {
    private IEnumerable<LivroListDto> _livros = Enumerable.Empty<LivroListDto>();
    private bool _isLoading = true;
    private bool _showDeleteDialog;
    private LivroListDto? _livroToDelete;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadLivrosAsync();
    }

    private async Task LoadLivrosAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        
        try
        {
            _livros = await LivroService.GetAllAsync();
        }
        catch (HttpRequestException)
        {
            _errorMessage = "Erro de conexão com o servidor. Tente novamente.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void HandleView(LivroListDto livro)
    {
        Navigation.NavigateTo($"/livros/{livro.CodL}");
    }

    private void HandleEdit(LivroListDto livro)
    {
        Navigation.NavigateTo($"/livros/edit/{livro.CodL}");
    }

    private void HandleDelete(LivroListDto livro)
    {
        _livroToDelete = livro;
        _showDeleteDialog = true;
    }

    private async Task ConfirmDelete()
    {
        if (_livroToDelete is null) return;

        var response = await LivroService.DeleteAsync(_livroToDelete.CodL);
        
        if (response.IsSuccess)
        {
            await LoadLivrosAsync();
        }
        else
        {
            _errorMessage = response.ErrorMessage;
        }

        _showDeleteDialog = false;
        _livroToDelete = null;
    }

    private void CancelDelete()
    {
        _showDeleteDialog = false;
        _livroToDelete = null;
    }
}
