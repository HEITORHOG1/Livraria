@page "/assuntos"
@using Livraria.Blazor.Components.Assuntos
@inject IAssuntoService AssuntoService
@inject NavigationManager Navigation

<PageTitle>Assuntos - Livraria</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">
        <i class="bi bi-tags me-2"></i>
        Assuntos
    </h3>
    <a href="/assuntos/create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>
        Novo Assunto
    </a>
</div>

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <ErrorAlert Message="@_errorMessage" OnDismiss="() => _errorMessage = null" />
}

@if (_isLoading)
{
    <LoadingSpinner />
}
else if (_assuntos.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <AssuntosTable Assuntos="_assuntos" 
                           OnEdit="HandleEdit" 
                           OnDelete="HandleDelete" />
        </div>
    </div>
}
else
{
    <EmptyState Message="Nenhum assunto cadastrado" />
}

<ConfirmDialog IsVisible="_showDeleteDialog"
               Title="Excluir Assunto"
               Message="@($"Deseja excluir o assunto '{_assuntoToDelete?.Descricao}'? Esta ação não pode ser desfeita.")"
               ConfirmText="Excluir"
               OnConfirm="ConfirmDelete"
               OnCancel="CancelDelete" />

@code {
    private IEnumerable<AssuntoDto> _assuntos = Enumerable.Empty<AssuntoDto>();
    private bool _isLoading = true;
    private bool _showDeleteDialog;
    private AssuntoDto? _assuntoToDelete;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadAssuntosAsync();
    }

    private async Task LoadAssuntosAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        
        try
        {
            _assuntos = await AssuntoService.GetAllAsync();
        }
        catch (HttpRequestException)
        {
            _errorMessage = "Erro de conexão com o servidor. Tente novamente.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void HandleEdit(AssuntoDto assunto)
    {
        Navigation.NavigateTo($"/assuntos/edit/{assunto.CodAs}");
    }

    private void HandleDelete(AssuntoDto assunto)
    {
        _assuntoToDelete = assunto;
        _showDeleteDialog = true;
    }

    private async Task ConfirmDelete()
    {
        if (_assuntoToDelete is null) return;

        var response = await AssuntoService.DeleteAsync(_assuntoToDelete.CodAs);
        
        if (response.IsSuccess)
        {
            await LoadAssuntosAsync();
        }
        else
        {
            _errorMessage = response.ErrorMessage;
        }

        _showDeleteDialog = false;
        _assuntoToDelete = null;
    }

    private void CancelDelete()
    {
        _showDeleteDialog = false;
        _assuntoToDelete = null;
    }
}
